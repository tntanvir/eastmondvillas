      "item": [
        {
          "name": "Register New User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('new_user_id', jsonData.pk);",
                  "    pm.environment.set('new_user_email', jsonData.email);",
                  "    pm.test('‚úÖ User registered successfully', () => {",
                  "        pm.expect(jsonData).to.have.property('pk');",
                  "        pm.expect(jsonData.email).to.exist;",
                  "    });",
                  "    console.log('New user created with ID:', jsonData.pk);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"name\": \"New Customer\",\n  \"phone\": \"+1234567890\",\n  \"password1\": \"SecurePass123!\",\n  \"password2\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/registration/",
              "host": ["{{base_url}}"],
              "path": ["api", "registration", ""]
            },
            "description": "Register a new user. Default role is 'customer' with 'only_view' permission."
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('access_token', jsonData.access);",
                  "    pm.environment.set('refresh_token', jsonData.refresh);",
                  "    if (jsonData.user) {",
                  "        pm.environment.set('user_id', jsonData.user.pk || jsonData.user.id);",
                  "        pm.environment.set('user_email', jsonData.user.email);",
                  "        pm.environment.set('user_role', jsonData.user.role);",
                  "        pm.environment.set('user_permission', jsonData.user.permission);",
                  "    }",
                  "    pm.test('‚úÖ Login successful', () => {",
                  "        pm.expect(jsonData.access).to.exist;",
                  "        pm.expect(jsonData.refresh).to.exist;",
                  "    });",
                  "    console.log('üîë Logged in as:', jsonData.user.email, '| Role:', jsonData.user.role);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{current_user_email}}\",\n  \"password\": \"{{current_user_password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login", ""]
            },
            "description": "Login with any user role. Access token is automatically saved and used for subsequent requests."
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/user/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "user", ""]
            },
            "description": "Get details of the currently authenticated user."
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('access_token', jsonData.access);",
