        {
          "name": "Register New User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201 Created', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has user data', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('pk');",
                  "    pm.expect(jsonData).to.have.property('email');",
                  "    pm.expect(jsonData).to.have.property('name');",
                  "    pm.expect(jsonData).to.have.property('is_active');",
                  "    ",
                  "    // Store user info for later use",
                  "    pm.environment.set('user_id', jsonData.pk);",
                  "    pm.environment.set('user_email', jsonData.email);",
                  "});",
                  "",
                  "pm.test('User is active', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.is_active).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_user_email}}\",\n  \"name\": \"Test User\",\n  \"phone\": \"+15551234567\",\n  \"password1\": \"{{test_user_password}}\",\n  \"password2\": \"{{test_user_password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/registration/",
              "host": ["{{base_url}}"],
              "path": ["registration", ""]
            },
            "description": "Register a new user account. Role will be 'customer' by default with 'only_view' permission."
          },
          "response": []
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200 OK', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains access and refresh tokens', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('access');",
                  "    pm.expect(jsonData).to.have.property('refresh');",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "    ",
                  "    // Store tokens in environment",
                  "    pm.environment.set('access_token', jsonData.access);",
                  "    pm.environment.set('refresh_token', jsonData.refresh);",
                  "    ",
                  "    // Store user info",
                  "    pm.environment.set('user_id', jsonData.user.id);",
                  "    pm.environment.set('user_email', jsonData.user.email);",
                  "});",
                  "",
                  "pm.test('Access token is valid JWT', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.access).to.match(/^eyJ[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]*$/);",
                  "});",
                  "",
                  "pm.test('User object contains required fields', function () {",
                  "    var user = pm.response.json().user;",
                  "    pm.expect(user).to.have.property('email');",
                  "    pm.expect(user).to.have.property('name');",
                  "    pm.expect(user).to.have.property('role');",
                  "    pm.expect(user).to.have.property('permission');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
